name: Generate Snake Animation

on:
  schedule:
    - cron: "0 0 * * *"
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: Platane/snk@v3
        with:
          github_user_name: hriic
          outputs: |
            dist/snake.svg?palette=github-dark
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_branch: snake-output  
